<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- favicon for our site-->
	<link rel="icon" href="../TankAssault/images/favicon.png">

	<title>Tank Assault 2 Player</title>
	<link href="../TankAssault/styles/stylesheet1.css" rel="stylesheet" type="text/css">
	<link rel="stylesheet" href="../TankAssault/styles/buttons.css">
	<script type="text/javascript" src="../TankAssault/js/jQuery.js"></script>
</head>

<body style="background-image:url('/TankAssault/images/3.jpg'); background-size:cover;">
	<audio id="audiotank" src="../TankAssault/media/tank.mp3" preload="auto"></audio>
	<audio id="audiobullet" src="../TankAssault/media/bullet.mp3" preload="auto"></audio>
	<audio id="audioreload" src="../TankAssault/media/reload.mp3" preload="auto"></audio>

	<br>
	<div id="wrapper" style="width:78vw;">
		<header>
			<h1>Let's Battle...</h1>
			<nav>
     			<h2 id="menulink"><a href="#navlinks">Menu</a></h2>
      			<button class="button startGame" onclick="generate()">Start New Game</button>
				<button class="button reSetTank" onclick="reSetTank()">Respawn Tanks</button>
    		</nav>
		</header>
 		<div id="content">

  			<canvas oncontextmenu="return false;" id="maze" width="900px" height="500px" style="border:1px solid #000015;"></canvas>
			<script type="text/javascript" src="../TankAssault/js/HTMLscripts.js"></script>
  	    </div>

    	<!--<script type="text/javascript" src="js/menu.js"></script>-->
	</div>
	<div id="squeezed">
		<p> Please Don't Squeeze Me... </p>
		<footer>
   		 	<p>© Copyright 2016–20 &nbsp;IITD Dev. Club</p>
   		</footer>
	</div>
	<div id="player1score">
		<figure style="background-color: #000021;">
			<img src="../TankAssault/images/scoreTank1.jpg" alt="Player1" width="100">
		</figure>
		<h2>Score</h2>
		<canvas id="player1stats" width="100px" height="50px" ></canvas>
		<br><br>
		<h2>Bullets</h2>
		<canvas id="player1bullets" width="120px" height="50px" ></canvas>
		<p id="reload1">Let's Start</p>
	</div>
	<div id="player2score">
		<figure>
			<img src="../TankAssault/images/scoreTank2.jpg" alt="Player2" width="100">
		</figure>
		<h2>Score</h2>
		<canvas oncontextmenu="return false;" id="player2stats" width="100px" height="50px" ></canvas>
		<br><br>
		<h2>Bullets</h2>
		<canvas id="player2bullets" width="120px" height="50px"></canvas>
		<p id="reload2">Let's Start</p>
	</div>
	<div>
		<img src="../TankAssault/images/bullet.jpg" alt="" width="15" id="bullet" style="display: none">
		<img src="../TankAssault/images/bulletOver.jpg" alt="" id="bulletOver" height="50px" style="display: none">
	</div>
	<br>

	<!--Life --><!--


	<div id="player1life">
		<canvas id="player1life" width="100px" height="50px" style="border:1px solid white;"></canvas>
	</div>
	<div id="player2life">
		<canvas oncontextmenu="return false;" id="player2life" width="100px" height="50px" style="border:1px solid white;"></canvas>
	</div>


	--><!--Life over-->
	<footer>
		<p>Brought to You By <a href="https://devclub.iitd.info" style="color : #666699;">IITD Dev. Club</a></p>
   	</footer>
	<script src="../TankAssault/js/MazeGeneration.js" type="text/javascript"></script>
	<script src="../TankAssault/js/animation.js" type="text/javascript"></script>
	<script src="../TankAssault/js/LocalGame.js" type="text/javascript"></script>
	<script src="../TankAssault/js/LocalGamePlay.js" type="text/javascript"></script>
</body>
</html>
